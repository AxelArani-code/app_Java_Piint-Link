<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Mantén la inspración"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="449dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/desing"
                        android:scaleType="center" />

                    <TextView
                        android:id="@+id/Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="335dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Los mejores diseños "
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="27dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="300dp"
                        android:text="Diseños del mes"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="265dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="192dp"
                        android:background="@drawable/modelo"
                        android:scaleType="centerCrop" />

                </RelativeLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tendencias de moda"
                    android:textAlignment="center"
                    android:textColor="#C9000000"
                    android:textSize="16dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Outfits para trabajar"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="381dp"
            android:layout_height="598dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="835dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="277dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Para darle un nuevo aire a tu baño"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="237dp"
                    android:layout_height="447dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="467dp"
                        android:background="@drawable/batrun"
                        android:scaleType="fitCenter"
                        app:riv_border_color="#fff"
                        app:riv_border_width="2dip"
                        app:riv_corner_radius="30dip"
                        app:riv_mutate_background="true"
                         />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/perfil_logo_1" />

                    <TextView

                        android:layout_width="172dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Angeles Blones"
                        android:textAlignment="center"
                        android:textColor="#9E000000"
                        android:textSize="18dp" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="1500dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="198dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="183dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/icon_good" />

                <TextView
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginEnd="114dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Esto es todo por hoy."
                    android:textAlignment="center"
                    android:textColor="#C8000000"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="341dp"
                    android:layout_height="56dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="41dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="29dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Vuelve mañana para inspirarte más"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="154dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/bt_back"
                        android:layout_width="296dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_border_2"
                        android:fontFamily="sans-serif-black"
                        android:text="Ir al feed de inicio"
                        android:textStyle="normal" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>